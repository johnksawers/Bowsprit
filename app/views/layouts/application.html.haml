!!!
%html
	%head
		%meta{:charset => "utf-8"}
		%meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
		%title= content_for?(:title) ? yield(:title) : "Bowsprit"
		%meta{:content => "", :name => "description"}
		%meta{:content => "", :name => "author"}
		= stylesheet_link_tag "application", :media => "all"
		= csrf_meta_tags
		= yield(:head)
		:javascript
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-19117133-7']);
			_gaq.push(['_trackPageview']);
			(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
	%body
		= render 'layouts/navigation'
		= render 'layouts/subnavigation'
		.main{:role => "main"}
			.main-inner
				.container
					.row
						.span12
							= render 'layouts/messages'
					.row
						= yield
		%footer.footer
			.footer-inner
				.container
					.row
						.span12
							&copy; #{Time.now.year} &mdash;
							= link_to 'John K Sawers', 'http://johnksawers.com'
							&mdash;
							= link_to '@johnksawers', 'https://www.twitter.com/johnksawers'
		= javascript_include_tag "application"