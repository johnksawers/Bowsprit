.subnavbar
	.subnavbar-inner
		.container
			%ul.mainnav
				- if user_signed_in?
					%li.active= link_to 'Dashboard', root_path
				%li
					%a{:href => './faq.html'}
						%i.icon-pushpin
						%span FAQ
				%li
					%a{:href => './pricing.html', :class => 'dropdown-toggle'}
						%i.icon-th-large
						%span Pricing Plans
				%li
					= link_to 'Edit account', edit_user_registration_path
				- if user_signed_in?
					%li= link_to 'Log Out', destroy_user_session_path
				- else
					%li= link_to 'Log In', new_user_session_path

					%li= link_to 'Sign Up', new_user_registration_path
