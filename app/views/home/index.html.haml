.span12
	%h1.page-title
		Welcome to Repart&eacute;e
.span12
	.widget.widget-table.action-table.question-set-list
		.widget-header
			.icon.icon.th.list
			%h3= link_to qs.name, qs
		.widget-content
			%ul
				%li.interview_action
					= edit_link question_set_path(qs)
					(#{qs.questions.count}) Questions
					= link_to 'All Interviews', question_set_interviews_path(qs), :class => 'btn btn-mini btn-right'
					= link_to 'Conduct Interview', new_question_set_interview_path(qs), :class => 'btn btn-mini btn-primary btn-right'
				-if  qs.interviews.any?
					%li.latest_interview
						Latest Interview:
						= link_to qs.interviews.last.name,[qs,qs.interviews.last]
