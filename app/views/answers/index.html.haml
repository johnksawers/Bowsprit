.span12
	%h1.page-title
		All answers for interview '#{@interview.name}'
.span9
	-# from outer space
	- if @interview.answers.empty?
		.widget
			.widget-header
				.icon.icon.th.list
				%h3.no_question_sets
					No answers for this interview yet, #{link_to 'Create one now', new_question_set_path}
	-else
		- @user.question_sets.each do |qs|
			.widget.question-set-list
				.widget-header
					.icon.icon.th.list
					%h3= link_to qs.name, qs
				.widget-content
					%ul
						%li.interview_action
							= edit_link question_set_path(qs)
							(#{qs.questions.count}) Questions
							= link_to 'All Interviews', question_set_interviews_path(qs), :class => 'btn btn-mini btn-right'
							= link_to 'Conduct Interview', new_question_set_interview_path(qs), :class => 'btn btn-mini btn-primary btn-right'
						-if  qs.interviews.any?
							%li.latest_interview
								Latest Interview:
								= link_to qs.interviews.last.name,[qs,qs.interviews.last]

.span3
	= link_to 'Conduct Interview', conduct_interview_path, :class => 'btn btn-large btn-warning btn-support-ask'