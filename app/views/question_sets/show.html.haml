.span12
	%h2.page-title
		="QuestionSet: #{@qs.name}"
.span12
	-if @qs.errors.any?
		#error_explanation
		%h2= "#{pluralize(@qs.errors.count, "error")} prohibited this question_set from being saved:"
		%ul
			- @qs.errors.full_messages.each do |msg|
				%li= msg
.span9
	.widget.widget-table.action-table.question-set-widget
		.widget-header
			.icon.icon.th.list
			%h3
				Questions
			= link_to 'Add Question','#', :class => 'btn btn-small', :id => 'add_question_button'
		.widget-content.question-list
			= form_for @qs do |f|
				:javascript
					var dynamic_question_form="#{build_dynamic_question_form f}";
				#new_question_fields_container
				#ul
					- if @qs.questions.empty?
						%li No questions for this QuestionSet, add some
					- else
						- @qs.questions.each do |q|
							%li
								%a.btn.btn-mini.edit_button{:id => "#{q.title.underscore}_edit",:href => '#'} Edit
								=q.title
								=link_to 'All Answers', question_path(q), :class => 'btn btn-mini right-btn'
								%div.edit_fields.hidden{:id => "#{q.title.underscore}_edit_fields"}
									=f.fields_for(:questions,q) do |builder|
										=render('question_fields', :f => builder)
						%li.actions
							= f.submit 'Save'
.span3
	= link_to 'Edit This QuestionSet', edit_question_set_path(@qs), :class => 'btn btn-large btn-warning btn-support-ask'