.row
	.col-md-12
		%h1.page-title
			All Interviews for Script
			%span.qs_name= @s.name
.row
	.col-md-9
		- if @s.interviews.empty?
			.widget.widget-table.action-table
				.widget-header
					%i.icon.icon.th.list
					%h3.no_scripts
						No Interviews, #{link_to 'Create one now', new_script_interview_path(@s)}
		-else
			- @s.interviews.each do |i|
				.widget.widget-table.action-table.question-set-list
					.widget-header
						%i.icon.icon-star
						%h3= i.name
					.widget-content
						%ul
							%li.interview_action
								= edit_link edit_script_interview_path(@s,i)
								#{i.answers.count} Answers
								= link_to 'Show Answers', script_interview_path(@s,i), :class => 'btn btn-mini btn-right'
	.col-md-3
		= link_to 'Conduct New Interview', new_script_interview_path(@s), :class => 'btn btn-large btn-warning btn-support-ask'