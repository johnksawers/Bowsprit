%p#notice= notice

%h2
  ="Name: #{@interview.name}"
  .btn= link_to 'Edit', edit_interview_path(@interview)

= form_for @interview do |f|

  .btn-primary
    = link_to_add_questions 'Add Question', f


  - if @interview.questions.empty?
    %p No questions for this Interview, add some
  - else
    %h2 Questions
    %ul
      - @interview.questions.each do |q|
        %li
          =q.title
          %a.btn.btn-mini{:id => "#{q.title.underscore}_edit",:href => '#'} Edit
          %a.btn.btn-mini{:id => "#{q.title.underscore}_destroy",:href => '#'}
            %i.icon-remove
          %span.edit_fields{:id => "#{q.title.underscore}_edit_fields"}
            =f.fields_for(:questions,q) do |builder|
              =render('question_fields', :f => builder)
  .actions
    = f.submit 'Save'